<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:mixinTypes="[sling:VanityPath]"
          jcr:title="OakPAL Interactive"
          sling:vanityPath="/oakpal/start"
          sling:vanityOrder="{Long}200"
          sling:resourceType="granite/ui/components/shell/page"
          consoleId="oakpal-interactive">
    <title jcr:primaryType="nt:unstructured" sling:resourceType="oakpal-interactive/components/shell/title"
           jcr:title="OakPAL Checklists"/>
    <actions jcr:primaryType="nt:unstructured">
        <primary jcr:primaryType="nt:unstructured">
            <createChecklist jcr:primaryType="nt:unstructured" granite:class="foundation-toggleable-control" href="#"
                  sling:resourceType="granite/ui/components/coral/foundation/button" variant="actionBar"
                  text="Checklist"
                  icon="addCircle" x-cq-linkchecker="skip">
                <granite:data jcr:primaryType="nt:unstructured" foundation-toggleable-control-action="show"
                              foundation-toggleable-control-target="#modalAddScript"/>
            </createChecklist>
        </primary>
    </actions>
    <content jcr:primaryType="nt:unstructured" sling:resourceType="oakpal-interactive/components/shell/jseditor"/>
</jcr:root>
